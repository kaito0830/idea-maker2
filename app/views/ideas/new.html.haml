.content
  =render "header"
  .form
    %h2.form--logo
      Let's Show Your Idea!!
    =form_for @idea do |f|
      =f.text_field :title, class:"form--title form-color", placeholder:"タイトル"
      .form--box
      =f.text_area :info, class:"form--info form-color", placeholder:"あなたのアイデアを教えてください"
      =f.number_field :price, class:"form--price form-color", min:1, placeholder:"値段を入力して下さい($)"
      =f.submit "Send", class:"form--btn"